{% extends 'blog_base.html.twig' %}
{% block title %}Symfony Blog{% endblock %}
 {% block post %}
    {% for post in posts %}
        <div class="col-lg-12 post">
            <h2>{{ post.title }}</h2>
            <div class="content">
                <div class="content_main">
                    <img src="https://symfony.com/images/v5/logos/header-logo.svg" alt="image">
                    <p class="allusio"><a href="{{
                        path(
                            'blog_show',
                            {
                                'slug': post.title,
                                'id': post.id
                            }
                        )|replace({'%20':"_"}) }}">
                            {{ post.allusio|slice(0, 170) }}
                            {% if post.allusio|length>170 %}
                                ...
                            {% endif %}
                            <br><span style="font-size: .8em; float: right; color: forestgreen;">read more-></span>
                        </a></p>
                </div>
                <div class="content_meta">
                    <p class="author" style="color: darkgoldenrod">{{ post.author }} | <span class="date">{{ post.date }}</span></p>
                </div>
            </div>

        </div>
    {% endfor %}
{% endblock %}
