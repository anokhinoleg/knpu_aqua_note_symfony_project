{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Registration</h1>
                {{ form_start(form) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.plainPassword.first, {
                        'label' : 'Password'
                    }) }}
                    {{ form_row(form.plainPassword.second, {
                        'label' : 'Repeat password to confirm it'
                    }) }}
                    <button type="submit" class="btn btn-primary " formnovalidate>Submit</button>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}